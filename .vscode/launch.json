    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "name": "Debug Sandbox",
            "request": "attach",
            "skipFiles": ["<node_internals>/**"],
            "program": "${workspaceFolder}\\sandbox.js"
        },

        {
            "type": "node",
            "request": "launch",
            "name": "Debug SFC-Extraction",
            "skipFiles": ["<node_internals>/**"],
            "program": "${workspaceFolder}/Applications/SFC-Extraction/app.js",
            "cwd": "${workspaceFolder}/Applications/SFC-Extraction"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Mocha Tests",
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "args": ["test/**/*.test.js", "./src/**/*.test.js"],
            "internalConsoleOptions": "openOnSessionStart"
        },

        {
            "type": "node",
            "request": "launch",
            "name": "Debug Sandbox",
            "skipFiles": ["<node_internals>/**"],
            "program": "${workspaceFolder}\\sandbox.js"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Main",
            "skipFiles": ["<node_internals>/**"],
            "program": "${workspaceFolder}/main.js"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug SNY-FRS Application",
            "skipFiles": ["<node_internals>/**"],
            "program": "${workspaceFolder}/Applications/sny_frs_phaseexp/app.js"
        }
    ]
}
